@page
@model myWebApplication1.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.studentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.studentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.studentAge)
        </dt>
        <dd class="col-sm-10">
            @{
                int newStudentAge;
                int yearsFromNow = 2;

                newStudentAge = @Model.Student.studentAge + 2;
            }
            @Html.DisplayFor(model => model.Student.studentAge)
            @{ if (newStudentAge > 16)
                {
                    @Html.Raw(" - In " + yearsFromNow + " years, student is able to drive.");
                    @Html.Raw("<button type='button' class='btn btn-success'>Yes!</button>");
                }
                else
                {
                    @Html.Raw(" - In " + yearsFromNow + " years, student is not able to drive.");
                    @Html.Raw("<button type='button' class='btn btn-danger'>No!</button>");
                }

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student.studentID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
